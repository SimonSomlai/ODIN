<!DOCTYPE html>
<html>
<head>
  <title>Blogger</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <p class="flash">
    <%= flash.notice %>
  </p>
  <div id="container">
    <div id="content">
      <%= yield %>
      <hr>
         <h6>
        <% if logged_in? %>
          <%=  current_user.username %>
          <%= link_to "(Logout)", logout_path %>
          <br/><br/>
          <%= link_to "(Admin Panel)", authors_path %>
        <% else %>
        Logged Out
          <%= link_to "(Login)", login_path %>
        <% end %>
      </h6>
    </div>
  </div>
</body>